<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/background"
                tools:context=".MainActivity" >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:columnCount="4"
        android:orientation="vertical"
        android:rowCount="7" >

        <EditText
            android:id="@+id/txtResult"
            style="@style/rounded_edittext"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:layout_row="0"
            android:text="0" />

        <Button
            android:id="@+id/btnOne"
            style="@style/rounded_button"
            android:layout_column="0"
            android:layout_row="1"
            android:contentDescription="1"
            android:text="1" />

        <Button
            android:id="@+id/btnTwo"
            style="@style/rounded_button"
            android:layout_column="1"
            android:layout_row="1"
            android:contentDescription="2"
            android:text="2" />

        <Button
            android:id="@+id/btnThree"
            style="@style/rounded_button"
            android:layout_column="2"
            android:layout_row="1"
            android:contentDescription="3"
            android:text="3" />

        <Button
            android:id="@+id/btnSix"
            style="@style/rounded_button"
            android:layout_column="1"
            android:layout_row="2"
            android:contentDescription="6"
            android:text="6" />

        <Button
            android:id="@+id/btnFive"
            style="@style/rounded_button"
            android:layout_column="0"
            android:layout_row="2"
            android:contentDescription="5"
            android:text="5" />

        <Button
            android:id="@+id/btnClear"
            style="@style/rounded_button.red.big"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="5"
            android:contentDescription="C"
            android:text="C" />

        <Button
            android:id="@+id/btnResult"
            style="@style/rounded_button.green.big"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_row="5"
            android:contentDescription="="
            android:text="=" />

        <Button
            android:id="@+id/btnEight"
            style="@style/rounded_button"
            android:layout_column="3"
            android:layout_row="2"
            android:contentDescription="8"
            android:text="8" />

        <Button
            android:id="@+id/btnFour"
            style="@style/rounded_button"
            android:layout_column="3"
            android:layout_row="1"
            android:contentDescription="4"
            android:text="4" />

        <Button
            android:id="@+id/btnSeven"
            style="@style/rounded_button"
            android:layout_column="2"
            android:layout_row="2"
            android:contentDescription="7"
            android:text="7" />

        <Button
            android:id="@+id/btnNine"
            style="@style/rounded_button"
            android:layout_column="0"
            android:layout_row="3"
            android:contentDescription="9"
            android:text="9" />

        <Button
            android:id="@+id/btnZero"
            style="@style/rounded_button"
            android:layout_column="1"
            android:layout_row="3"
            android:contentDescription="0"
            android:text="0" />

        <Button
            android:id="@+id/btnComma"
            style="@style/rounded_button"
            android:layout_column="2"
            android:layout_row="3"
            android:contentDescription=","
            android:text="," />

        <Button
            android:id="@+id/btnDelete"
            style="@style/rounded_button"
            android:layout_column="3"
            android:layout_row="3"
            android:contentDescription="Del"
            android:text="&lt;-" />

        <Button
            android:id="@+id/btnDivide"
            style="@style/rounded_button"
            android:layout_column="3"
            android:layout_row="4"
            android:contentDescription="/"
            android:text="/" />

        <Button
            android:id="@+id/btnMultiply"
            style="@style/rounded_button"
            android:layout_column="2"
            android:layout_row="4"
            android:contentDescription="*"
            android:text="*" />

        <Button
            android:id="@+id/btnAdd"
            style="@style/rounded_button"
            android:layout_column="0"
            android:layout_row="4"
            android:contentDescription="+"
            android:text="+" />

        <Button
            android:id="@+id/btnSubtract"
            style="@style/rounded_button"
            android:layout_column="1"
            android:layout_row="4"
            android:contentDescription="-"
            android:text="-" />
    </GridLayout>

</RelativeLayout>